{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/.mcp.schema.json",
  "mcpServers": {
    "context7": {
      "$comment": "Using shell wrapper to load PATH (fixes npx bash function issue). Use .mcp.windows.json for Windows.",
      "command": "{{MCP_SHELL}}",
      "args": ["-l", "-c", "exec npx -y @upstash/context7-mcp@latest"]
    },
    "sequential-thinking": {
      "command": "{{MCP_SHELL}}",
      "args": ["-l", "-c", "exec npx -y @modelcontextprotocol/server-sequential-thinking"]
    },
    "stitch": {
      "command": "{{MCP_SHELL}}",
      "args": ["-l", "-c", "exec npx -y stitch-mcp"],
      "env": {
        "GOOGLE_CLOUD_PROJECT": "YOUR_PROJECT_ID"
      }
    },
    "memory": {
      "$comment": "Persistent memory across sessions for user preferences, project context, and learned patterns",
      "command": "{{MCP_SHELL}}",
      "args": ["-l", "-c", "exec npx -y @modelcontextprotocol/server-memory"]
    }
  },
  "staggeredStartup": {
    "enabled": true,
    "delayMs": 500,
    "connectionTimeout": 15000
  }
}
